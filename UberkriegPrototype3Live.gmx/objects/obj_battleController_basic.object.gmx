    //draw pos
    var xx = 0;
    var yy = 0;
    //loop vars
    var i = 0;
    var j = 0;
    //visibiilty colour mix
    var vis = c_gray;
    
    for( i=0 ; i&lt;global.mapW ; i++){ 
        for( j=0 ; j&lt;global.mapH ; j++ ){
            //set draw pos
            xx = startx+(i*8);
            yy = starty+(j*8);
