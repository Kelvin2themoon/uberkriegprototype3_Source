    draw_rectangle(view_xview,view_yview,view_xview+768,view_yview+432,0);
    draw_set_color(make_color_rgb(235,218,206));
    
    //determin player
    var i_player = noone;
    if (global.net_mode = 2) i_player = global.P[global.Local_Player];
    else i_player = global.P_Turn;
    
    //drawn intel
    var cop_ready = false;
    var scop_ready = false;
    var i = 1;
    for ( i=1 ; i&lt;5 ; i++){
        if ( intel_pos[i] !=0 ){
            //draw base image
            draw_sprite(spr_intel_base,intel_pos[i].number-1, view_xview+24-6, view_yview+16+104*(i-1));
            //draw CO name, temp 'till CO prtraits are avaliable
            draw_text(view_xview+16+16-5-6, view_yview+16+25-12+104*(i-1),string(intel_pos[i].CO.name));
            //chech for infiltrate 
            if ((i_player.intel_P[intel_pos[i].number] or i_player.CO.COFX_PerfectIntel or i_player.team = intel_pos[i].team) or global.net_mode = 1 or global.fow[i_player.number] = "Disabled" ){
                //funds
                scr_draw_num(spr_num_light,true,intel_pos[i].funds, view_xview+114-6,view_yview+39+104*(i-1),8);
                //battle strength
                scr_draw_num(spr_num_light,true,intel_pos[i].battle_strength, view_xview+114-6,view_yview+61+104*(i-1),8);
                //stars
                cop_ready  = false;
                scop_ready = false;
                if (intel_pos[i].CO.charge &gt;= intel_pos[i].CO.COP_Bar*star_value )  cop_ready = true;
                if (intel_pos[i].CO.charge &gt;= intel_pos[i].CO.SCOP_Bar*star_value) scop_ready = true;
                scr_draw_stars(view_xview+276 -6 -(intel_pos[i].CO.COP_Bar*7+intel_pos[i].CO.SCOP_Bar*13),view_yview+84+104*(i-1),intel_pos[i].CO.COP_Bar,intel_pos[i].CO.SCOP_Bar,intel_pos[i].CO.charge,cop_ready,scop_ready);
                //unit count
                scr_draw_num(spr_num_light,true,intel_pos[i].unit_count, view_xview+324-6,view_yview+39+104*(i-1),2);
